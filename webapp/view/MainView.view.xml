<mvc:View controllerName="logaligroup.invoices.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <Panel headerText="{i18n>selectionScreen}">
                <Label id="labelShipName" text="{i18n>ShipName}" class="sapUiSmallMargin"></Label>
                <Input id="shipName" value="{selectionScreen>/ShipName}" width="200px" class="sapUiSmallMarginEnd"></Input>
                <Label id="labelContry" text="{i18n>Country}" class="sapUiSmallMargin"></Label>
                <Select id="slCountry" selectedKey="{selectionScreen>/CountryKey}" forceSelection="false" items="{selectionScreen>/Countries}">
                    <items>
                        <core:Item key="{selectionScreen>key}" text="{selectionScreen>text}"></core:Item>
                    </items>
                </Select>
                <Button id="btnFilter" text="{i18n>btnFilter}" icon="sap-icon://filter" press="onFilter" class="sapUiSmallMargin"></Button>
                <Button id="btnClearFilter" text="{i18n>ClearbtnFilter}" icon="sap-icon://clear-filter" press="onClearFilter" class="sapUiSmallMargin"></Button>
            </Panel>
        </content>
    </Page>
</mvc:View>
